// Demonstrate the use of function chaining and "self"

fn calc_create(v) {
  fn add(v) {
    self.value = self.value + v
    result = self
  }

  fn sub(v) {
    self.value = self.value - v
    result = self
  }

  result = [
    value: v,
    add: add,
    sub: sub
  ]
}

calc = calc_create(0)
writeln(calc.add(20).sub(5).value) // 15

